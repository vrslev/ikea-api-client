# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.{yml,yaml}]
indent_size = 2

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 119

# The JSON files contain newlines inconsistently
[*.json]
indent_size = 2

[docs/**.txt]
max_line_length = 79
